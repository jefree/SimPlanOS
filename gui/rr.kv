<SimPlanOS>:

	c_procesos: c_procesos
	c_recursos: c_recursos
	l_info: l_info

	BoxLayout:
		orientation: 'vertical'

		# layout procesadores
		BoxLayout: 
			id: procesadores

		# demas elementos del gui
		BoxLayout:
			orientation: 'vertical'
			BoxLayout: 
				orientation: 'horizontal'
				id: extras

				# tabla con info de los procesos
				BoxLayout:
					size_hint_y: 0.8
					orientation: 'vertical'

					BoxLayout:
						size_hint_y: 0.2

						Label:
							color: (0,0,1,1)
							text: 'Proceso'
						Label:
							color: (0,0,1,1)
							text: 'Tiempo'
						Label:
							color: (0,0,1,1)
							text: 'Cuanto'
					
					BoxLayout:
						id: c_procesos

				#tabla info recursos
				BoxLayout:
					size_hint_y: 0.8
					orientation: 'vertical'

					BoxLayout:
						size_hint_y: 0.2
						Label:
							color: (0,1,1,1)
							text: 'Recurso'
						Label:
							color: (0,1,1,1)
							text: 'Usando'
						Label:
							color: (0,1,1,1)
							text: 'Bloqueado'

					BoxLayout:
						id: c_recursos

			Label:
				id: l_info
				size_hint_y: 0.2
				text: 'Informacion'

			BoxLayout:
				size_hint_y: 0.15

				Button:
					text: "Before"
					on_press: root.manager.current = root.manager().previous()

				Button:
					text: 'Iniciar'
					on_press: root.iniciar()

				Button:
					text: 'Pausar'
					on_press: root.pausar()

				Button:
					text: 'Paso'
					on_press: root.hacer_paso()

				Button:
					text: 'Proceso'
					on_press: root.mostrar_popup_proceso()

				Button: 
					text: 'Recursos'
					on_press: root.mostrar_popup_recurso()

				Button:
					text: "Next"
					on_press: root.manager.current = root.manager.next()

<ProcesadorGUI>:
	orientation: 'vertical'

	Label
		color: (1,0,1,1)
		id: id_procesador

	Label:
		id: l_info
		size_hint_y: 0.2
		text: 'Informacion'

	BoxLayout:

		Label:
			color: (0,0,1,1)
			text: 'Proceso'
		Label:
			color: (0,0,1,1)
			text: 'Tiempo'
		Label:
			color: (0,0,1,1)
			text: 'Cuanto'

	BoxLayout:

		Label:
			id: nombre
		Label:
			id: tiempo
		Label:
			id: cuanto

	Label:
		color: (0,1,0,1)
		text:'LISTOS'
	BoxLayout:
		orientation: 'vertical'
		id: listos

	Label:
		color: (0,1,0,1)
		text:'SUSPENDIDOS'

	Label:
		color: (1,0,0,1)
		id: c_suspendido

	BoxLayout:
		orientation: 'vertical'
		id: suspendidos

	Label:
		color: (0,1,0,1)
		text:'BLOQUEADOS'
	BoxLayout:
		orientation: 'vertical'
		id: bloqueados

<ProcesoPopup>:
	
	size_hint: (0.8, 0.8)

	title: 'Agregar Proceso'

	txt_nombre: txt_nombre
	txt_tiempo: txt_tiempo
	txt_recursos: txt_recursos
	txt_procesador: txt_procesador
	btn_lista: btn_lista

	BoxLayout:
		
		BoxLayout:
			orientation: 'vertical'

			#contingencia
			BoxLayout:

			BoxLayout:
				size_hint_y: 0.25

				Label:
					
					text: 'Nombre'
				TextInput:
					id: txt_nombre

			BoxLayout:
				size_hint_y: 0.25
				Label:
					text: 'Tiempo'
				TextInput:
					id: txt_tiempo

			BoxLayout:
				size_hint_y: 0.25
				Label:
					text: 'Recursos'
				TextInput:
					id: txt_recursos

			BoxLayout:
				size_hint_y: 0.25
				Label:
					text: 'N. Procesador'
				TextInput:
					id: txt_procesador

			#contingencia
			BoxLayout:

			Button:
				size_hint_y: 0.3
				text: 'Agregar'
				on_press: root.agregar()

		GridLayout:

			rows: 3

			Button:
				id: btn_lista
				size_hint: (0.8, 0.3)
				text: 'Recursos'

			#contingencia
			FloatLayout:

			#contingencia
			FloatLayout:


